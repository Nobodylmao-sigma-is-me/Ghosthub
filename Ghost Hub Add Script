---Get Current Script ID in Firebase Database Function
local function GetCurrentScriptID()
 local database = URL..".json?auth="..Secret
 local data = game.HttpService:JSONDecode(game:HttpGetAsync(database))
 return data["Current_Script_ID"]["Current_Script_ID"]["Script_ID"]
end
