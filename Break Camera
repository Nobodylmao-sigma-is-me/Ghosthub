local Cam = Instance.new("Part")

local position = Vector3.new(0,1000000,0)
Cam.Name = "Cam"
Cam.Color = Color3.new(1,1,1)
Cam.Material = Enum.Material.Plastic
Cam.Transparency = 1
Cam.Position = position
Cam.Size = Vector3.new(2,0.5,1)
Cam.CastShadow = true
Cam.Anchored = true
Cam.CanCollide = false
Cam.Parent = workspace
